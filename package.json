{
  "name": "uoc-boilerplate",
  "version": "3.12.0",
  "private": true,
  "description": "Boilerplate para el proyecto Casas Elina - Lucena del Cid",
  "scripts": {
    "clean": "rimraf dist .cache .cache-loader .parcel-cache",
    "stylelint": "stylelint src/**/*.scss",
    "parcel:serve": "parcel src/index.html -p 8123 --target web",
    "parcel:build": "parcel build src/index.html --target web --dist-dir dist --no-source-maps --no-cache",
    "dev": "npm-run-all --serial clean parcel:serve",
    "build": "npm-run-all --serial clean stylelint parcel:build",
    "test": "echo 'Everything is working as expected. Start working on your project by running npm run dev'"
  },
  "targets": {
    "web": {
      "context": "browser",
      "publicUrl": "./",
      "source": "src/index.html",
      "distDir": "dist",
      "engines": {
        "browsers": "last 2 versions, > 0.5%, not dead"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clasalvill/P1-UOC-Boilerplate.git"
  },
  "author": {
    "name": "Clara Salvador"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/clasalvill/P1-UOC-Boilerplate/issues"
  },
  "homepage": "https://github.com/clasalvill/P1-UOC-Boilerplate#readme",
  "devDependencies": {
    "@parcel/transformer-sass": "^2.15.3",
    "autoprefixer": "^10.4.20",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.16.0",
    "postcss-preset-env": "^10.1.3",
    "posthtml": "^0.16.7",
    "posthtml-include": "^2.0.1",
    "rimraf": "^6.0.1",
    "sass": "^1.93.2",
    "sharp": "^0.33.5",
    "stylelint": "^16.25.0",
    "stylelint-config-recess-order": "^7.3.0",
    "stylelint-config-recommended-scss": "^16.0.2",
    "stylelint-scss": "^6.12.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0"
  }
}
